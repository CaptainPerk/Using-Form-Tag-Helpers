@model City
@{ Layout = "_Layout"; }

<form method="post">
    <div class="form-group">
        <label helper-for="Name"/>
        <input helper-for="Name"/>
    </div>
    <div class="form-group">
        <label helper-for="Country"/>
        <input helper-for="Country" />
    </div>
    <div class="form-group">
        <label helper-for="Population"/>
        <input helper-for="Population" />
    </div>
    <div theme="primary" class="m-1 p-1">
        <button type="submit">Submit</button>
        <button type="reset">Reset</button>
        <a href="/Home/Index">Cancel</a>
    </div>
    <div class="m-1 p-1">
        <formbutton type="submit" bg-color="danger">Add</formbutton>
        <formbutton type="reset"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>